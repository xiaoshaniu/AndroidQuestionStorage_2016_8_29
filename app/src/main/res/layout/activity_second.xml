<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEED1"
    tools:context="com.example.shijun.androidquestionstorage_2016_8_29.SecondActivity">

    <RelativeLayout
    android:id="@+id/re_you"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#CD4F39"
    android:gravity="center_vertical">
    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/re_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_back_white_24dp"
            />
        <TextView
            android:id="@+id/re_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="分类练习"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/re_img"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/search_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_search_white_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re_you">
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:numColumns="2"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp"
                android:layout_gravity="right|top">
            </GridView>
        </FrameLayout>

<LinearLayout
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:orientation="vertical">

<LinearLayout
    android:clickable="true"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/home_nav_title">
    <ImageView
        android:id="@+id/re_img1"
        android:src="@mipmap/hugh"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xiaoli"
        android:textSize="20sp"
        />
</LinearLayout>


    <ListView
        android:id="@+id/lv_01"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:choiceMode="singleChoice"
        android:cacheColorHint="#000"
        android:padding="10dp"
        android:background="#fff"
       >
    </ListView>

    <RelativeLayout
        android:background="#fff"
        android:layout_width="250dp"
        android:layout_height="120dp"
       >
        <Button
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@mipmap/ic_settings_grey600_18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:textColor="#000"
            android:layout_marginRight="5dp"
            android:drawableLeft="@mipmap/ic_exit_to_app_grey600_18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>


    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>
